<h2>Editar información</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<div class="well well-lg">
  <%= f.email_field :email, autofocus: true %>

  <%= f.text_field :first_name %>

  <%= f.text_field :last_name %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <i>(dejar en blanco si no la deseas actualizar)</i><br />
  <%= f.password_field :password, autocomplete: "off", hide_label: true %></div>

  <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <div><%= f.label :current_password %> <i>(necesitamos tu contraseña para realizar los cambios)</i><br />
  <%= f.password_field :current_password, autocomplete: "off", hide_label: true %></div>

  <%= f.primary "Actualizar" %>
  <%= link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn btn-default' %>

<% end %>
</div>